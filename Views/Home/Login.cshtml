@model LoginUser
<div class="jumbotron">
    <h1>Log In</h1>
    <a href="/">Doesn't Have Account yet?</a>
</div>
<div class="col-sm-6">
    <form asp-action="Login" method="post">
        <div class="form-group">
            <span asp-validation-for="LoginEmail"></span><br>
            <label asp-for="LoginEmail">Email Address</label>
            <input asp-for="LoginEmail" class="form-control">
        </div>
        <div class="form-group">
            <span asp-validation-for="LoginPassword"></span><br>
            <label asp-for="LoginPassword">Password</label>
            <input asp-for="LoginPassword" class="form-control">
        </div>
        <input type="submit" value="Log In" class="btn btn-danger">
    </form>
</div>